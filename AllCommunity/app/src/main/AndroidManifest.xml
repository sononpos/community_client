<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sononpos.allcommunity">

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.sononpos.allcommunity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" /> <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.sononpos.allcommunity.CommunityArticle"
            android:label="@string/title_activity_community_article"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sononpos.allcommunity.LoadingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sononpos.allcommunity.SettingsActivity" />
        <activity android:name="com.sononpos.allcommunity.SettingsRenewActivity"
            android:theme="@style/AppTheme_For_Settings"
            />
        <activity
            android:name="com.sononpos.allcommunity.TutorialActivity"
            android:label="@string/title_activity_tutorial"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.sononpos.allcommunity.FirstSettings.FirstSetting_ThemeActivity"
            android:label="@string/title_activity_first_setting__theme"
            android:theme="@style/AppTheme"></activity>

        <!-- [START firebase_service] -->
        <service
            android:name="com.sononpos.allcommunity.FCMPush.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <!-- [END firebase_service] -->
        <!-- [START firebase_iid_service] -->
        <service
            android:name="com.sononpos.allcommunity.FCMPush.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <!-- [END firebase_iid_service] -->
    </application>

</manifest>