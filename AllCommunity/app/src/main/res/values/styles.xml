<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorCustom</item>
    </style>

    <style name="AppTheme_For_Settings" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorCustom</item>
        <item name="android:background">@color/colorCustom3</item>
    </style>

    <style name="AppTheme.Icon">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppTheme.Icon.Small">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="AppTheme.ArticleItemBase">
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
</resources>
