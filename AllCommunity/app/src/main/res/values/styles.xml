<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/mainColor</item>
    </style>

    <style name="AppTheme_For_Settings" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/mainColor</item>
        <item name="android:textColorPrimary">@color/mainTextColor</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:background">@color/settings_back</item>
    </style>

    <style name="AppTheme.Icon">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppTheme.Icon.Small">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="AppTheme.ArticleItemBase">
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="AppTheme.TextView2">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/subTextColor</item>
    </style>

    <style name="AppTheme.TextView3">
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.TextView4">
        <item name="android:paddingLeft">13dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/mainColor</item>
    </style>

    <style name="AppTheme.TextView_Youtube">
        <item name="android:paddingLeft">13dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="AppTheme.TextView_Youtube.Small">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/subTextColor</item>
    </style>

    <style name="AppTheme.TextView_Youtube_sub">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="AppTheme.TextView_Youtube_sub.Small">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/subTextColor</item>
    </style>

    <style name="AppTheme.CheckBox">
        <item name="colorAccent">@color/colorCustom</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
