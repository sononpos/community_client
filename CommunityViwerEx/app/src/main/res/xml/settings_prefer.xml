<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="일반">
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/theme_type"
        android:entryValues="@array/theme_type_val"
        android:key="theme_type"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="테스트"
        android:title="테마 변경"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="리스트 표시">
        <SwitchPreference
            android:defaultValue="true"
            android:key="list_short"
            android:summary="리스트 제목을 줄여서 표시하기 여부"
            android:switchTextOff="OFF"
            android:switchTextOn="ON"
            android:title="제목 줄여서 표시하기" />
    </PreferenceCategory>

    <PreferenceCategory android:title="컨텐츠 액션">
        <SwitchPreference
            android:defaultValue="true"
            android:key="webview_slide_action"
            android:summary="좌,우 슬라이드로 닫기, 공유하기 기능 사용"
            android:switchTextOff="OFF"
            android:switchTextOn="ON"
            android:title="슬라이드 액션 사용" />
    </PreferenceCategory>

    <PreferenceCategory android:title="앱 정보">
        <Preference
            android:key="app_recommand"
            android:title="앱 평가하기"
            />

        <Preference
            android:key="ver"
            android:title="버전 정보"
            android:summary="1.0"
            />
    </PreferenceCategory>

    <PreferenceCategory android:title="개발자 도와주기">
        <Preference
            android:key="donate_coffee"
            android:title="커피 한잔"
            />
    </PreferenceCategory>
</PreferenceScreen>